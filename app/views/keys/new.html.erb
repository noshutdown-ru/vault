    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
    padding-bottom: 25px;
    border-bottom: 2px solid #f0f0f0;
  }

  .pwd-header-item {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .pwd-header-item .pwd-field-label {
    margin-bottom: 0;
  }

  @media (max-width: 900px) {
    .pwd-header-row {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .pwd-header-row {
      grid-template-columns: 1fr;
    }
  }

  /* Fields */
  .pwd-field {
    margin-bottom: 25px;
    padding-bottom: 25px;
    border-bottom: 1px solid #f0f0f0;
  }

  .pwd-field:last-of-type {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
  }

  .pwd-field-full-width {
    grid-column: 1 / -1;
  }

  .pwd-field-label {
    font-size: 0.75em;
    font-weight: 600;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 8px;
    display: block;
  }

  .pwd-field-value {
    padding: 10px 12px;
    background-color: #f5f5f5;
    border-radius: 4px;
    word-break: break-all;
    color: #333;
    font-size: 0.95em;
    line-height: 1.4;
  }

  /* Form Elements */
  .pwd-form-group {
    display: flex;
    gap: 10px;
  }

  .pwd-form-input,
  .pwd-form-select,
  .pwd-form-textarea {
    flex: 1;
    padding: 10px 12px;
    background-color: #fff !important;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 0.9em;
    font-family: inherit;
    transition: all 0.15s ease;
  }

  .pwd-form-input,
  .pwd-form-textarea {
    color: #333;
  }

  .pwd-select-wrapper {
    position: relative;
  }

  .pwd-form-select {
    color: transparent !important;
    background-color: #fff !important;
  }

  .pwd-form-select:focus {
    color: #000 !important;
  }

  .pwd-select-text {
    position: absolute;
    left: 12px;
    top: 50%;
    transform: translateY(-50%);
    pointer-events: none;
    color: #000;
    font-size: 0.9em;
    font-family: inherit;
    white-space: nowrap;
  }

  .pwd-form-input:focus,
  .pwd-form-select:focus,
  .pwd-form-textarea:focus {
    outline: none;
    border-color: #1976d2;
    box-shadow: 0 0 0 3px rgba(25, 118, 210, 0.1);
  }

  .pwd-form-textarea {
    resize: vertical;
    min-height: 120px;
    font-family: 'Courier New', monospace;
  }

  .pwd-form-password {
    display: flex;
    gap: 10px;
    align-items: center;
  }

  .pwd-form-password .pwd-form-input {
    flex: 1;
  }

  .pwd-generate-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 8px 12px;
    background-color: #f5f5f5;
    border: 1px solid #ddd;
    border-radius: 4px;
    cursor: pointer;
    color: #666;
    transition: all 0.15s ease;
    gap: 6px;
    font-size: 0.85em;
    font-weight: 500;
    white-space: nowrap;
  }

  .pwd-generate-btn:hover {
    background-color: #efefef;
    border-color: #999;
  }

  .pwd-generate-btn i {
    font-size: 0.9em;
  }

  /* File Upload */
