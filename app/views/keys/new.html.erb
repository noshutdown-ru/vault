    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .pwd-whitelist-btn:hover {
    background-color: #efefef;
    border-color: #1976d2;
    color: #1976d2;
  }

  /* Footer */
  .pwd-footer {
    padding-top: 20px;
    border-top: 1px solid #e0e0e0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 15px;
  }

  .pwd-footer-left {
    display: flex;
    gap: 10px;
  }

  .pwd-footer-right {
    display: flex;
    gap: 10px;
  }

  /* Buttons */
  .pwd-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 8px 16px;
    background-color: #f5f5f5;
    color: #333;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 0.9em;
    font-weight: 500;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.15s ease;
    gap: 8px;
  }

  .pwd-btn:hover {
    background-color: #efefef;
    border-color: #999;
  }

