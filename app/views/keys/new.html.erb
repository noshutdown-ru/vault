    font-size: 0.85em;
    font-weight: 500;
    transition: all 0.15s ease;
  }

  .pwd-edit-tags-link:hover {
    background-color: #bbdefb;
  }

  /* Whitelist */
  .pwd-whitelist-container {
    display: flex;
    gap: 12px;
    align-items: flex-start;
    padding: 15px;
    background-color: #f5f5f5;
    border-radius: 4px;
    max-width: 100%;
  }

