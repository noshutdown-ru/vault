<div class="pwd-container">
  <%= form_for @key, url: { controller: :keys, action: :create }, as: :vault_key do |f| %>

    <!-- Main Content -->
    <div class="pwd-content">
      <!-- Form Fields Section -->
      <div class="pwd-main">
        <div class="pwd-card">
          <!-- Metadata Header Row -->
          <div class="pwd-header-row">
            <div class="pwd-header-item">
              <div class="pwd-field-label"><%= t('key.attr.type') %></div>
              <div class="pwd-form-group pwd-select-wrapper">
                <%= f.select :type, key_types, {}, { class: 'pwd-form-select', id: 'vault_key_type' } %>
              </div>
            </div>

            <div class="pwd-header-item">
              <div class="pwd-field-label"><%= t('key.attr.name') %></div>
              <div class="pwd-form-group">
                <%= f.text_field :name, class: 'pwd-form-input', id: 'vault_key_name' %>
              </div>
            </div>
          </div>

          <!-- URL Field -->
          <div class="pwd-field">
            <div class="pwd-field-label"><%= t('key.attr.url') %></div>
            <div class="pwd-form-group">
              <%= f.text_field :url, class: 'pwd-form-input', id: 'vault_key_url' %>
            </div>
          </div>

          <!-- Login Field -->
          <div class="pwd-field">
            <div class="pwd-field-label"><%= t('key.attr.login') %></div>
            <div class="pwd-form-group">
              <%= f.text_field :login, class: 'pwd-form-input', id: 'vault_key_login' %>
            </div>
          </div>

          <!-- Password Field -->
          <div class="pwd-field">
            <div class="pwd-field-label"><%= t('key.attr.body') %></div>
            <div class="pwd-form-password">
              <%= f.text_field :body, autocomplete: :off, class: 'pwd-form-input', id: 'vault_key_body' %>
              <button type="button" class="pwd-generate-btn" id="generate_password_btn" onclick="generatePassword();">
                <i class='fa fa-refresh'></i> Generate
              </button>
            </div>
          </div>

          <!-- File Field -->
          <div class="pwd-field" id="vault_file_section" style="display: none;">
            <div class="pwd-field-label"><%= t('key.attr.file') %></div>
            <div class="pwd-file-upload">
              <button type="button" class="pwd-upload-btn" onclick="document.getElementById('vault_key_file').click();">
                <i class='fa fa-upload'></i> Upload File
              </button>
              <%= f.file_field :file, style: "display: none;", id: 'vault_key_file' %>
            </div>
          </div>

          <!-- Tags Field -->
          <div class="pwd-field">
            <div class="pwd-field-label"><%= t('key.attr.tags') %></div>
            <div class="pwd-form-group">
              <%= f.text_field :tags, value: Vault::Tag.tags_to_string(@key.tags), class: 'pwd-form-input autocomplete', id: 'vault_key_tags' %>
            </div>
          </div>

          <!-- Comment Field -->
          <div class="pwd-field pwd-field-full-width">
            <div class="pwd-field-label"><%= t('key.attr.comment') %></div>
            <div class="pwd-form-group">
              <%= f.text_area :comment, class: 'pwd-form-textarea wiki-edit', id: 'vault_key_comment' %>
            </div>
          </div>

          <!-- Whitelist Field -->
          <% if User.current.allowed_to?(:manage_whitelist_keys, @project) %>
            <%  whitelisted = @key.whitelist.split(",") %>
            <%  all_users = @project.memberships.active.where(:users => {:type => 'User'}).sort.map {|u| [u.principal, u.principal.id.to_s]} %>
            <%  all_groups = @project.memberships.active.where(:users => {:type => 'Group'}).sort.map {|u| [u.principal, u.principal.id.to_s]} %>
            <%  all_users = all_groups|all_users %>
            <div class="pwd-field pwd-field-full-width" id="vault_whitelist">
              <div class="pwd-field-label"><%= t('key.attr.whitelist') %></div>
              <div class="pwd-whitelist-container">
                <div class="pwd-whitelist-column">
                  <%= label_tag 'selected_users', t('key.whitelist.selected_members'), class: "pwd-whitelist-label" %>
                  <%= select_tag 'whitelist',
                    options_for_select(all_users.select {|u| whitelisted.include?(u[1])}),
                    id: 'selected_users', multiple: true, size: 8, class: 'pwd-whitelist-select' %>
                </div>
                <div class="pwd-whitelist-buttons">
                  <button type="button" class="pwd-whitelist-btn" onclick="moveOptions(this.form.selected_users, this.form.available_users);" title="Move to available">&#8594;</button>
                  <button type="button" class="pwd-whitelist-btn" onclick="moveOptions(this.form.available_users, this.form.selected_users);" title="Move to selected">&#8592;</button>
                </div>
                <div class="pwd-whitelist-column">
                  <%= label_tag 'available_users', t('key.whitelist.available_members'), class: "pwd-whitelist-label" %>
                  <%= select_tag 'available_users',
                    options_for_select(all_users.select {|u| not whitelisted.include?(u[1])}),
                    id: 'available_users', multiple: true, size: 8, class: 'pwd-whitelist-select' %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="pwd-footer">
      <div class="pwd-footer-left">
        <%= link_to t('button_back'), project_keys_path(@project), class: 'pwd-btn pwd-btn-back' %>
      </div>
      <div class="pwd-footer-right">
        <button type="submit" class="pwd-btn pwd-btn-save">Create</button>
      </div>
    </div>

  <% end %>
</div>

<script>
  $(function() {
    var availableTags = <%= raw(Vault::Tag.tags_list(@project.id).to_json) %>;
    function split( val ) {
      return val.split( /,\s*/ );
    }
    function extractLast( term ) {
      return split( term ).pop();
    }

    $( "#vault_key_tags" )
      .bind( "keydown", function( event ) {
        if ( event.keyCode === $.ui.keyCode.TAB &&
            $( this ).autocomplete( "instance" ).menu.active ) {
          event.preventDefault();
        }
      })
      .autocomplete({
        minLength: 0,
        source: function( request, response ) {
          response( $.ui.autocomplete.filter(
            availableTags, extractLast( request.term ) ) );
        },
        focus: function() {
          return false;
        },
        select: function( event, ui ) {
          var terms = split( this.value );
          terms.pop();
          terms.push( ui.item.value );
          terms.push( "" );
          this.value = terms.join( ", " );
          return false;
        }
      });

    // Toggle file section based on key type
    function toggleFileSection() {
      var keyType = $('#vault_key_type').val();
      var fileSection = $('#vault_file_section');
      if (keyType === 'Vault::Sftp' || keyType === 'Vault::KeyFile') {
        fileSection.show();
      } else {
        fileSection.hide();
      }
    }

    // Update select text display
    function updateSelectDisplay() {
      var select = $('#vault_key_type')[0];
      var selectedOption = select.options[select.selectedIndex];
      var selectedText = selectedOption ? selectedOption.text : '';

      // Remove existing text label
      $('#vault_key_type').siblings('.pwd-select-text').remove();

      // Add new text label if value is selected
      if (selectedText && selectedText.trim()) {
        var textLabel = $('<div class="pwd-select-text">' + selectedText + '</div>');
        $('#vault_key_type').parent().prepend(textLabel);
      }
    }

    $('#vault_key_type').on('change', function() {
      toggleFileSection();
      updateSelectDisplay();
    });

    toggleFileSection(); // Call on page load
    updateSelectDisplay(); // Update text display on page load

    // Auto-fill name from selected file
    $('#vault_key_file').on('change', function(){
      if(this.files && this.files[0]){
        var fileName = this.files[0].name;
        $('#vault_key_name').val(fileName);
      }
    });

    // Handle whitelist form submission
    $('#vault_whitelist').closest('form').submit(function(){
      $('#selected_users option').prop('selected', true);
    });
  });

  function generatePassword() {
    const passwordField = document.getElementById('vault_key_body');
    const currentPassword = passwordField.value.trim();

    if (currentPassword !== '') {
      if (!confirm('Are you sure you want to generate a new password? This will replace the current password.')) {
        return;
      }
    }

    const length = 20;
    const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!@#$%^&*';
    let password = '';
    for (let i = 0; i < length; i++) {
      password += chars.charAt(Math.floor(Math.random() * chars.length));
    }
    passwordField.value = password;
  }
</script>

<style>
  * {
    box-sizing: border-box;
  }

  .pwd-container {
    max-width: 1400px;
    margin: 0;
    clear: both;
  }

  /* Content Layout */
  .pwd-content {
    display: flex;
    gap: 25px;
    margin-bottom: 30px;
  }

  .pwd-main {
    flex: 1;
    min-width: 0;
  }

  .pwd-sidebar {
    width: 450px;
    flex-shrink: 0;
    align-self: flex-start;
  }

  @media (max-width: 1400px) {
    .pwd-sidebar {
      width: 380px;
    }
  }

  @media (max-width: 1200px) {
    .pwd-content {
